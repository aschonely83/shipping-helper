<h2> Sign Up </h2>

<%= form_for @user, action: '/signup', method: 'post' do |f| %>
    <% if @user.errors.any? %>
        <div id="error-explanation">
        <h2>There were some errors:</h2>
        <div class="container">
            <% @user.errors.full_messages.each do |msg| %>
                <div><%= msg %></div>
                <br>
            <% end %>
        </div>
        </div>
    <% end %>

        
    <div id="field<%= ' field_with_errors' if @user.errors[:email].any? %>">
        <%= f.label :email %>
        <%= f.text_field :email %><br />
    </div>

    <br />

        
    <div id="field<%= ' field_with_errors' if @user.errors[:password].any? %>">
        <%= f.label :password %>
        <%= f.password_field :password %><br />
    </div>

    <br />
       


    <%= f.submit "Sign Up" %>
<% end %>
